<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="1134px">

            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="493px"
                android:layout_height="286px"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:tag="mlar"
                android:background="@drawable/logo" />

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="648px"
                android:layout_height="570px"
                android:layout_below="@+id/logo_img"
                android:layout_centerHorizontal="true"
                android:background="#fff"
                android:layout_marginTop="25px" >

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="138px"
                    android:src="@drawable/white_box_divider" />

                <ImageView
                    android:id="@+id/divider_2"
                    android:layout_width="565px"
                    android:layout_height="2px"
                    android:layout_below="@+id/divider"
                    android:layout_marginTop="140px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/white_box_divider" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_alignBottom="@+id/divider_2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40px"
                    android:layout_marginBottom="43px"
                    android:textSize="36px"
                    android:textColor="#000"
                    android:text="Connected"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:layout_marginRight="10px"
                    android:textSize="36px"
                    android:text="63%"
                    android:textColor="#000"
                    android:layout_alignTop="@+id/textView1"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40px"
                    android:tag="mwar"
                    android:layout_alignTop="@+id/textView1" 
                    android:background="@drawable/battery"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/divider_2"
                    android:textColor="#000"
                    android:layout_marginTop="50px"
                    android:text="Brightness"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="565px"
                    android:layout_height="100px"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:tag="mwar"
                    android:layout_marginTop="35px" >
                    
                    <Button
                        android:id="@+id/low" 
                        android:layout_width="188px"
                        android:tag="mwar"
                        android:layout_height="100px"
                        android:background="@drawable/b1"/>
                    
                    <Button
                        android:id="@+id/medium" 
                        android:layout_width="188px"
                        android:tag="mwar"
                        android:layout_height="100px"
                        android:background="@drawable/b2"/>
                    
                    <Button
                        android:id="@+id/high" 
                        android:layout_width="188px"
                        android:tag="mwar"
                        android:layout_height="100px"
                        android:background="@drawable/b3"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45px"
                    android:text="TSHIRTOS SETTINGS"
                    android:textColor="#ad0057"
                    android:textSize="52px"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <Button
                android:id="@+id/gif_lower"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_below="@+id/container"
                android:layout_centerHorizontal="true"
                android:background="#0000"
                android:textSize="52px"
                android:textColor="#fff"
                android:layout_marginTop="10px"
                android:text="GIF" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="648px"
                android:layout_height="2px"
                android:layout_below="@+id/gif_lower"
                android:layout_marginTop="5px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/divider" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="185px"
                android:layout_marginTop="50px"
                android:layout_below="@+id/imageView2"
                android:tag="mwar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tagline" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
