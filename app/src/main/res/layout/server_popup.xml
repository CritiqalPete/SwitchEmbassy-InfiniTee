<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000"
        android:splitMotionEvents="false" >

        <RelativeLayout
            android:layout_width="620px"
            android:layout_height="450px"
            android:layout_centerInParent="true"
            android:background="#fff"
            android:splitMotionEvents="false" >

            <Button
                android:id="@+id/btn_txt"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:background="#0000"
                android:text="SELECT A SERVER"
                android:textColor="#ad0057"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@+id/btn_txt"
                android:background="@drawable/white_box_divider" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Development"
                    android:textColor="#000" />

                <RadioButton
                    android:id="@+id/pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Production"
                    android:checked="true"
                    android:textColor="#000" />
            </RadioGroup>

            <Button
                android:id="@+id/button2"
                android:layout_width="180px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/radioGroup1"
                android:layout_marginBottom="18dp"
                android:text="Cancel"
                android:textColor="#000" />

            <Button
                android:id="@+id/button1"
                android:layout_width="180px"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignLeft="@+id/radioGroup1"
                android:text="OK"
                android:textColor="#000" />

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>