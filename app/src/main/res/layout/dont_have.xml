<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="493px"
        android:layout_height="286px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:tag="mlar"
        android:background="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="648px"
        android:layout_height="630px"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190px"
        android:background="#fff" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="140px"
            android:background="@drawable/white_box_divider" />

        <TextView
            android:id="@+id/head"
            android:layout_width="566px"
            android:layout_height="150px"
            android:layout_centerHorizontal="true"
            android:textSize="36px"
            android:textColor="#000"
            android:layout_marginTop="150px"/>

        <TextView
            android:id="@+id/words"
            android:layout_width="566px"
            android:layout_height="150px"
            android:textSize="30px"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325px" />

        <Button
            android:id="@+id/url_btn"
            android:layout_width="566px"
            android:layout_height="102px"
            android:layout_below="@+id/words"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26px"
            android:textColor="#fff"
            android:textSize="36px"
            android:text="Find out more at tshirtOS.com"
            android:background="#1d78eb" />

        <TextView
            android:id="@+id/cont_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44px"
            android:textColor="#ad0057"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="648px"
        android:layout_height="2px"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/logo"
        android:layout_marginTop="52px"
        android:background="@drawable/divider" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:background="#0000"
        android:textSize="52px"
        android:textColor="#fff"
        android:text="I HAVE TSHIRTOS"
        android:layout_marginTop="15px" />

</RelativeLayout>